<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.bsdmasterindex.PASysinfo"
        version     = "1.2.1"
        versionCode = "10" >
        <!-- versionCode is optional and Android only -->
        <preference name="phonegap-version" value="3.5.0" />

        <name>PASysinfo</name>
        <description>Phonegap Apple System Information</description>
        <author href="http://bsdmasterindex.com" email="jessemonroy650@yahoo.com">
        Jesse Monroy
        </author>
        <gap:platform name="android" />
        <gap:platform name="ios" />

        <preference name="permissions" value="none"/>
        <!-- device required so we can detect if we are using iOS -->
        <gap:plugin name="org.apache.cordova.device" version="0.2.12" />
        <gap:plugin name="org.apache.cordova.network-information" version="0.2.12" />
        <gap:plugin name="com.ankamagames.plugins.sysinfo" version="0.1.0" />
    </widget>
